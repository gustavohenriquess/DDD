generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model List {

  id String @id @default(uuid())

  title       String
  description String
  createdAt   DateTime?
  updatedAt   DateTime?

  @@map("lists")
}

model Item {

  id String @id @default(uuid())

  title        String
  description  String
  done         Boolean
  forecastDate DateTime?
  createdAt    DateTime?
  updatedAt    DateTime?

  @@map("items")
}
